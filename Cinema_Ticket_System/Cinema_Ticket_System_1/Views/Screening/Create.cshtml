@using CinemaTicketSystem.ViewModels
@model ScreeningCreateViewModel

@{
    ViewData["Title"] = "Create Screening";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-header bg-success text-white">
                <h4 class="mb-0">Create New Screening</h4>
            </div>
            <div class="card-body p-4">
                <form method="post" novalidate>
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="mb-3">
                        <label asp-for="MovieId" class="form-label"></label>
                        <select asp-for="MovieId" asp-items="@(new SelectList(Model.Movies, "Id", "Title"))" class="form-select" required>
                            <option value="">-- Select Movie --</option>
                        </select>
                        <span asp-validation-for="MovieId" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="CinemaId" class="form-label"></label>
                        <select asp-for="CinemaId" class="form-select" required>
                            <option value="">-- Select Cinema --</option>
                            @foreach (var cinema in Model.Cinemas)
                            {
                                <option value="@cinema.Id">@cinema.Name (@cinema.Rows rows x @cinema.SeatsPerRow seats = @cinema.TotalSeats total)</option>
                            }
                        </select>
                        <span asp-validation-for="CinemaId" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ScreeningDateTime" class="form-label"></label>
                        <input asp-for="ScreeningDateTime" type="datetime-local" class="form-control" required />
                        <span asp-validation-for="ScreeningDateTime" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="TicketPrice" class="form-label"></label>
                        <input asp-for="TicketPrice" type="number" step="0.01" class="form-control" required />
                        <span asp-validation-for="TicketPrice" class="text-danger small"></span>
                    </div>

                    <button type="submit" class="btn btn-success w-100">Create Screening</button>
                    <a asp-action="Index" class="btn btn-secondary w-100 mt-2">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>