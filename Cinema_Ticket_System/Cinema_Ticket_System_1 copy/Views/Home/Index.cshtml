@model IEnumerable<Movie>
@{
    ViewData["Title"] = "Home";
}

<h2 class="text-center mb-4">Latest Movies</h2>
<div class="row justify-content-center">
    @if (Model.Any())
    {
        @foreach (var movie in Model)
        {
            <div class="col-md-4 col-lg-3 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@movie.Title</h5>
                        <p class="card-text flex-grow-1">@movie.Genre</p>
                        <a asp-controller="Home" asp-action="Details" asp-route-id="@movie.Id" class="btn btn-info mt-auto">Details</a>
                        <div style="height: 10px;"></div>
                        <a asp-controller="Screening" asp-action="Index" asp-route-movieId="@movie.Id" class="btn btn-primary mt-auto" style="margin-top: 8px;">View Screenings</a>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12">
            <div class="alert alert-info text-center">No movies are currently available.</div>
        </div>
    }
</div>