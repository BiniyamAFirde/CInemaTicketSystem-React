@model CinemaTicketSystem.Models.Booking

@{
    ViewData["Title"] = "Booking Confirmation";
}

<h2>Booking Confirmation</h2>

<div class="alert alert-success">
    Your booking has been confirmed!
</div>

<div>
    <h4>Booking Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Movie
        </dt>
        <dd class="col-sm-10">
            @Model.Screening?.Movie?.Title
        </dd>
        <dt class="col-sm-2">
            Screening Time
        </dt>
        <dd class="col-sm-10">
            @Model.Screening?.ScreeningDateTime.ToString("g")
        </dd>
        <dt class="col-sm-2">
            Number of Tickets
        </dt>
        <dd class="col-sm-10">
            @Model.Seats.Count()
        </dd>
        <dt class="col-sm-2">
            Total Price
        </dt>
        <dd class="col-sm-10">
            @Model.TotalPrice.ToString("C")
        </dd>
    </dl>
</div>